{
    "help": {
        "description": "Displays the available commands",
        "command": "showHelp"
    },
    "conference": {
        "description": "Conference Testing",
        "submenu" : {
            "start": {
                "description": "Starts conference testing",
                "command": "startConfTest"
            },
            "stop": {
                "description": "Stops Conference Testing",
                "command": "stopConfTest"
            },
            "setConfig": {
                "description": "Configures conference testing. Use `conference conf [ENGLISH|ALL] [ONCE|ENDLESS] [time_between_tests_in_ms]. Defaults: Endless, English, 60000",
                "command": "setConfConf"
            },
            "showConfig": {
                "description": "Shows current conference testing configuration.",
                "command": "showConfConf"
            },
            "end": true
        },
        "command": "stream"
    },
    "status": {
        "description": "Displays the status of the device",
        "command": "status"
    },
    "version": {
        "description": "Displays the device's software version",
        "command": "version"
    },
    "dial": {
        "description": "Dials a phone number. Use dial [phoneNumber] [pin] [locale (Def: EN_US)]",
        "command": "dial"
    },
    "shutdown": {
        "description": "Logs out the bot from circuit and terminates the process",
        "command": "shutdown"
    }
}